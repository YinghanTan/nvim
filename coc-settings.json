// --- Reference ---
// https://www.chrisatmachine.com/Neovim/26-lsp-symbols/
{

  // Coc-RestClient
  "rest-client.showHeaders": false,
  "rest-client.proxy": "",

  // Suggestions
  "suggest.completionItemKindLabels": {
    "method": "  ",
    "function": "  ",
    "variable": "[]",
    "field": "  ",
    "typeParameter": "<>",
    "constant": "  ",
    "class": " פּ ",
    "interface": " 蘒",
    "struct": "  ",
    "event": "  ",
    "operator": "  ",
    "module": "  ",
    "property": "  ",
    "enum": " 練",
    "reference": "  ",
    "keyword": "  ",
    "file": "  ",
    "folder": " ﱮ ",
    "color": "  ",
    "unit": " 塞 ",
    "snippet": "\ue60b", //  pair of curly braces
    "text": "  ",
    "constructor": "  ",
    "value": "  ",
    "enumMember": "  ",
    "default": "\uf29c" //  question mark in circle
  },

  "snippets.priority": 1,
  "suggest.languageSourcePriority": 99,
  "coc.source.file.priority": 2,
  "coc.source.around.priority": 3,
  "coc.source.buffer.priority": 4,

  // Diagnostics
  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": false, // this won't work with codelens when error on same line

  // List
  "list.indicator": ">",
  "list.selectedSignText": " ",

  // AutoFormat
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
    // "css",
    // "markdown",
    // "javascript",
    // "dart",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "typescript.tsx",
    "graphql",
    // "html",
    // "htmldjango",
    // "yaml",
    // "json",
    // "python",
    // "py",
    "java",
    // "dart",
    "bash",
    "sh",
    "zsh"
  ],
  "coc.preferences.formatOnType": true,
  "tsserver.formatOnType": true, // Run format on type special characters., default: true
  "tsserver.enableJavascript": true, // use tsserver for javascript files enabled by default
  "codeLens.enable": false, // to speed things up

  // Javascript Formatting
  "eslint.autoFixOnSave": false, // pause autofix
  // "prettier.tabWidth": 4, // useful for some projects
  // "prettier.eslintIntegration": true,
  "prettier.requireConfig": false,
  "prettier.bracketSpacing": true,
  "prettier.disableSuccessMessage": false,
  // "prettier.onlyUseLocalVersion": true,

  // Python Formatting
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.pyenv/versions/3.9.9/bin/black",
  "python.formatting.blackArgs": [],
  // "python.formatting.blackArgs": ["--line-length", "79"],

  // Linting
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": false,
  /* "python.linting.pylintPath": "~/venvs/pylint/bin/pylint", */
  "python.linting.pylintPath": "~/.pyenv/versions/3.9.9/bin/pylint",
  "python.linting.pylintArgs": [
    "--init-hook",
    "import pylint_venv; pylint_venv.inithook(force_venv_activation=True)"
  ],
  /* "python.linting.pylintPath": "~/.local/bin/pylint", */
  // "python.linting.pylintEnabled": true,
  // "python.jediPath": "~/.local/lib/python3.8/site-packages",

  // Snippets
  "snippets.userSnippetsDirectory": "~/.config/nvim/UltiSnips",
  "snippets.editSnippetsCommand": "vsplit",
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescriptreact": ["typescript", "javascript", "javascript-jasmine-arrow"],
    "typescript": ["typescript", "javascript", "javascript-jasmine-arrow"]
  },

  // Emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "handlebars": "html",
    "htmldjango": "html"
  },

  // Coc-Git
  "git.enableGutters": true,
  "git.changedSign.text": "~",
  "git.addedSign.text": "+",
  "git.removedSign.text": "_",
  "git.topRemovedSign.text": "‾",
  "git.changeRemovedSign.text": "≃",
  "git.issueFormat": "#%i",

  // coc-sh
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash", "zsh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "diagnostic-languageserver.filetypes": {
    // lint `sh` (includes `bash`) files
    "sh": "shellcheck",
    "zsh": "shellcheck"
  },
  "diagnostic-languageserver.formatters": {
    // define our formatter so that we can reference it from
    // `diagnostic-languageserver.formatFiletypes`
    "shfmt": {
      "command": "shfmt",
      // all the below args are entirely optional
      // primarily listed here to call out that flags which take an
      // argument (such as `-i <num-spaces>` for specifying indentation)
      // should be split into two strings, the flag and then the value
      "args": ["-i", "2", "-bn", "-ci", "-sr"]
    }
  },
  "yaml.format.enable": true,

  // Coc-Html
  "html.enable": true,
  "html.format.enable": true,
  "html.filetypes": ["html", "handlebars", "django", "htmldjango"],
  "html.autoCreateQuotes": false,
  // Html Django
  "htmldjango.enable": true,
  "htmldjango.djhtml.tabWidth": 2,

  // Dart Flutter
  "dart.enableSdkFormatter": true,
  "flutter.lsp.debug": true,
  "flutter.provider.enableSnippet": true,

  "list.insertMappings": {
    "<C-x>": "action:split",
    "<C-v>": "action:vsplit"
  },
  "list.normalMappings": {
    "s": "action:split",
    "v": "action:vsplit"
  }

}

// --- Reference ---
// https://www.chrisatmachine.com/Neovim/26-lsp-symbols/
